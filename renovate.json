{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>eliashaeussler/renovate-config"
	],
	"constraints": {
		"php": "8.2.*"
	},
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/^config\\.yaml$/"
			],
			"matchStrings": [
				"value: '(?<currentValue>[^']+)' # renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)"
			]
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/^templates/src/composer\\.json\\.twig$/"
			],
			"matchStrings": [
				"\"(?<depName>[\\w-]+/[\\w-]+)\": \"(?<currentValue>[^\"\\s]+)\""
			],
			"datasourceTemplate": "packagist"
		}
	],
	"github-actions": {
		"managerFilePatterns": [
			"/^templates/src/\\.github/workflows/.+\\.yaml(\\.twig)?$/"
		]
	},
	"packageRules": [
		{
			"enabled": false,
			"matchCurrentVersion": "8.2",
			"matchDatasources": [
				"github-tags"
			],
			"matchDepNames": [
				"php"
			],
			"matchFileNames": [
				".github/workflows/cgl.yaml"
			]
		}
	]
}
